

<table class="table table-bordered" style="width:80%; margin:80px auto;">
  <tr>
    <th>姓名</th>
    <th>性别</th>
    <th>年龄</th>
    <th>身份证号</th>
    <th>角色</th>
    <th>手机号码</th>
    <th>邮箱</th>
    <th>借书证</th>
    <th>人员状态</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |f| %>
    <tr>
      <td><%= f.name %></td>
      <td><%= f.sex %></td>
      <td><%= f.age %></td>
      <td><%= f.id_card %></td>
      <td><%= f.role %></td>
      <td><%= f.phone %></td>
      <td><%= f.email  %></td>
      <td><%= f.person_number %></td>
      <td><%= f.state_id %></td>
      <td><%= link_to "查看", user_path(f) %></td>
      <td><%= link_to "编辑", edit_user_path(f) %></td>
      <td><%= link_to "删除", user_path(f), method: :delete, data:{confirm:"您确定删除!"} %></td>
    </tr>
  <% end %>
</table>
