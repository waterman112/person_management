
  <p>
    <strong>名字:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>性别:</strong>
    <%= @user.sex %>
  </p>

  <p>
    <strong>年龄:</strong>
    <%= @user.age %>
  </p>

  <p>
    <strong>身份证:</strong>
    <%= @user.id_card %>
  </p>

  <p>
    <strong>角色:</strong>
    <%= @user.role %>
  </p>

  <p>
    <strong>电话:</strong>
    <%= @user.phone %>
  </p>

  <p>
    <strong>邮箱:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>借书证:</strong>
    <%= @user.person_number %>
  </p>

  <p>
    <strong>状态:</strong>
    <%= State.where("id = ?", @user.state_id).first.state_name %>
  </p>

  <!--人员所在年级班级的情况-->
  <p>
    年级：<%= @user.periods.first.period_name  %>
  </p>

  <p>
   班级： <%= @user.periods.first.class_name  %>
  </p>

  <!--log-->
  <% @logs.each do |f| %>
    <div>
      <p>开始时间：<%= f.start_date %></p>
      <p>截止时间：<%= f.end_date %></p>
    </div>
  <% end %>

  <!--返回-->
  <p>
    <%= link_to "返回", users_path  %>
  </p>

